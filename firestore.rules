rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is a therapist based on their user document.
    // This can be used for rules on single document reads/writes ('get', 'create', 'update', 'delete').
    // It CANNOT be used in 'list' rules.
    function isTherapist(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isTherapist == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own user document.
      // A user can only read or update their own document.
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'patients' collection
    match /patients/{patientId} {
      // RULE FOR LISTING/QUERYING:
      // An authenticated user can query the 'patients' collection IF AND ONLY IF
      // their query includes a `where("therapistId", "==", request.auth.uid)` filter.
      // This is the correct, secure way to handle list operations and avoids the previous error.
      allow list: if request.auth != null && request.query.get("therapistId") == request.auth.uid;

      // RULE FOR GETTING A SINGLE DOCUMENT:
      // A user can get a single patient document if they are a therapist and are assigned to that patient.
      allow get: if request.auth != null && isTherapist(request.auth.uid) && resource.data.therapistId == request.auth.uid;

      // RULE FOR CREATING A DOCUMENT:
      // A user can create a patient document if they are a therapist and they are assigning themselves as the therapist.
      allow create: if request.auth != null && isTherapist(request.auth.uid) && request.resource.data.therapistId == request.auth.uid;

      // RULE FOR UPDATING/DELETING A DOCUMENT:
      // A user can update or delete a patient document if they are a therapist and are assigned to that patient.
      allow update, delete: if request.auth != null && isTherapist(request.auth.uid) && resource.data.therapistId == request.auth.uid;
    }
  }
}
