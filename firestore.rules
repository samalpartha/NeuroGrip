rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is a therapist by reading their own user document.
    // This is allowed in rules for single-document operations (get, write).
    // It CANNOT be used in rules for collection queries (list).
    function isTherapist(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isTherapist == true;
    }

    match /users/{userId} {
      // Anyone can create their own user document during signup.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can only read their own profile.
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own name.
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.keys().hasOnly(['name']);
    }

    match /patients/{patientId} {
      // RULE: A user can query the 'patients' collection ONLY IF their query
      // explicitly filters for documents where 'therapistId' is their own UID.
      // This is the primary security mechanism for listing data.
      allow list: if request.auth != null
                  && request.query.where.size() == 1
                  && request.query.where[0].fieldPath == "therapistId"
                  && request.query.where[0].op == "=="
                  && request.query.where[0].value == request.auth.uid;
      
      // RULE: A therapist can get a single patient document if they are the assigned therapist.
      allow get: if request.auth != null 
                 && isTherapist(request.auth.uid)
                 && resource.data.therapistId == request.auth.uid;
      
      // RULE: A therapist can create a patient document, and must set themselves as the therapist.
      allow create: if request.auth != null 
                    && isTherapist(request.auth.uid)
                    && request.resource.data.therapistId == request.auth.uid;
      
      // RULE: The assigned therapist can update or delete their patient's document.
      allow update, delete: if request.auth != null 
                            && isTherapist(request.auth.uid)
                            && resource.data.therapistId == request.auth.uid;
    }
  }
}
