rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTherapist() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true;
    }

    // /users/{userId}
    // Users can create their own profile.
    // Only the owner can read, update, or delete their own profile.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    // /patients/{patientId}
    // A patient document can only be accessed by the therapist assigned to them.
    match /patients/{patientId} {
      // Allow a therapist to get a single patient document if they are the assigned therapist.
      allow get: if isTherapist() && resource.data.therapistId == request.auth.uid;
      
      // Allow a therapist to list patients if the query filters by their therapistId.
      allow list: if isTherapist() && request.query.where[0][0] == "therapistId" && request.query.where[0][2] == request.auth.uid;

      // Allow create if the user is a therapist and is creating the patient for themselves.
      allow create: if isTherapist() && request.resource.data.therapistId == request.auth.uid;
      
      // Allow update and delete if the user is the therapist assigned to the patient.
      allow update, delete: if isTherapist() && resource.data.therapistId == request.auth.uid;
    }
  }
}
