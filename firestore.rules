rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    // Users can create their own profile.
    // Only the owner can read, update, or delete their own profile.
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    // /patients/{patientId}
    // A patient document can only be accessed by the therapist assigned to them.
    match /patients/{patientId} {
      // Allow read and list if the user is the therapist assigned to the patient.
      allow get, list: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && resource.data.therapistId == request.auth.uid;
      
      // Allow create if the user is a therapist and is creating the patient for themselves.
      allow create: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && request.resource.data.therapistId == request.auth.uid;
      
      // Allow update and delete if the user is the therapist assigned to the patient.
      allow update, delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && resource.data.therapistId == request.auth.uid;
    }
  }
}
