rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // A user can create their own document, and can read/update their own document.
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    match /patients/{patientId} {
      // A therapist can query the 'patients' collection ONLY IF their query
      // explicitly filters for documents where 'therapistId' is their own UID.
      // This is the primary security mechanism for listing data.
      allow list: if request.auth != null
                  && request.query.where.size() > 0 // Ensure there's a where clause
                  && request.query.where[0].fieldPath == "therapistId"
                  && request.query.where[0].op == "=="
                  && request.query.where[0].value == request.auth.uid;
      
      // A therapist can get a single patient document if they are the assigned therapist.
      // This uses `get()` which is allowed for single-document reads.
      allow get: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && resource.data.therapistId == request.auth.uid;
      
      // A therapist can create a patient document, and must set themselves as the therapist.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && request.resource.data.therapistId == request.auth.uid;
      
      // The assigned therapist can update or delete their patient's document.
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTherapist == true && resource.data.therapistId == request.auth.uid;
    }
  }
}
